{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "traceResolution": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "listEmittedFiles": false,
    "sourceMap": false,
    "lib": ["ES6", "dom"],
    "target": "es6"
  },
  "include": [
    "src/main/*",
    "src/test/helpers",
    "src/node_modules"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}